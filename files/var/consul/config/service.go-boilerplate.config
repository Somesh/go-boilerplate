consul = "consul.domain.local:8500" // your consul domain

log_level = "warn"
template {
  // consul template to run 
  source      = "/var/consul/template/go-boilerplate.main.ctmpl"

  // consul output file to be updated with template run output
  destination = "/etc/go-boilerplate/production/go-boilerplate.main.ini"

  // commands to be executed after the destination file is updated. please look at it carefully.
  command = "MYENV=production  go-boilerplate -test && (systemctl restart your-service-name || systemctl start your-service-name || curl -X POST --data-urlencode \"payload={'icon_emoji' : ':explodeparrot:', 'channel':'go-boilerplate', 'username': 'go-boilerplate Consul Watch', 'parse' : 'full', 'text': '@channel [$MYENV]*go-boilerplate* Error when SERVICE RELOAD or START on $HOSTNAME PLEASE CHECK'}\" https://hooks.slack.com/services/TMSP/B6HW/yZyRGHBcNGrOr9omECR)
  
  // this is by default 30s
  command_timeout = "90s"
}
